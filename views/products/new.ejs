<%- include('../partials/header') %>
<p class="h1" class="title">Add Product</p>

<form id="newForm" action="/products" method="POST">
  <div class="form-floating mb-3">
    <input type="text" name="name" class="form-control" placeholder="product name" required>
    <label for="floatingInput">product name</label>
  </div>

  <div class="form-floating mb-3">
    <input type="number" name="price" class="form-control"  placeholder="product price" required>
    <label for="floatingInput">product price $</label>
  </div>
  
  <div class="form-floating mb-3">
    <input type="datetime-local" name="listingDate" class="form-control" placeholder="listing date">
    <label for="floatingInput">listing date</label>
  </div>

  <div class="form-floating mb-3">
    <input type="text" name="description" class="form-control" placeholder="description">
    <label for="floatingInput">leave some description here</label>
  </div>

  <input type="submit" value="Add Product">
</form>

<%- include('../partials/footer') %>

